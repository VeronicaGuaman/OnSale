@model OnSale.Common.Entities.City
@{
    ViewData["Title"] = "EditCity";
}

<h2>EditCity</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="IdDepartment"/>
            <partial name="_City" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success"/>
                <a asp-action="DetailsDepartment" asp-route-id="@Model.IdDepartment" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts{ 
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

